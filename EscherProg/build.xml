<project name="GeomLab" default="build">
	<property name="bin.dir" location="bin"/>
	<property name="src.dir" location="src"/>
	<property name="boot.dir" location="boot"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>

	<!-- intermediate build products -->
	<property name="script_class" value="geomlab.RunScript"/>

	<path id="geomlab.classpath">
        <pathelement location="bin"/>
    </path>

	<target name="GeomLab" description="Run GeomLab">
        <java classname="geomlab.GeomLab" failonerror="true" fork="yes">
            <classpath refid="geomlab.classpath"/>
        </java>
    </target>
	
	<target name="clean-all" depends="jar_clean,boot_clean,clean" description="Clean GeomLab All"/>

	<target name="boot_clean" description="Clean GeomLab Boot">
		<echo message="Clean GeomLab Boot"/>
		<delete>
			<fileset dir="${boot.dir}" includes="*.boot"/>
			<!-- stage1, stage2, stage3 -->
		</delete>
		<delete>
			<fileset dir="${bin.dir}" includes="*.gls"/>
			<!-- geomlab.gls -->
		</delete>
	</target>

	<target name="boot" depends="boot_clean" description="Create GeomLab Boot">
		<!-- Use the bootstrap code to compile the compiler -->
		<echo message="Create GeomLab Boot"/>
		<java classname="${script_class}" classpath="${bin.dir}" fork="false"
                output="${boot.dir}/stage1.boot">
			<arg value="-b"/>
			<arg value="${boot.dir}/boot.txt"/>
			<arg value="${boot.dir}/compiler.txt"/>
		</java>
		<echo message="stage1.boot"/>
		<java classname="${script_class}" classpath="${bin.dir}" fork="false"
                output="${boot.dir}/stage2.boot">
			<arg value="-b"/>
			<arg value="${boot.dir}/stage1.boot"/>
			<arg value="${boot.dir}/compiler.txt"/>
		</java>
		<echo message="stage2.boot"/>
		<java classname="${script_class}" classpath="${bin.dir}" fork="false"
                output="${boot.dir}/stage3.boot">
			<arg value="-b"/>
			<arg value="${boot.dir}/stage2.boot"/>
			<arg value="${boot.dir}/compiler.txt"/>
		</java>
		<echo message="stage3.boot"/>
		<java classname="${script_class}" classpath="${bin.dir}" fork="false">
			<arg value="-b"/>
			<arg value="${boot.dir}/stage2.boot"/>
			<arg value="${boot.dir}/prelude.txt"/>
			<arg value="-e"/>
			<arg value="_dump(&quot;${bin.dir}/geomlab.gls&quot;)"/>
		</java>
		<echo message="${bin.dir}/geomlab.gls"/>
		<!-- move file="geomlab.gls" todir="${bin.dir}"/ -->
	</target>

    <target name="clean" description="Clean GeomLab Java Classes">
        <delete dir="bin"/>
    </target>

    <target name="init">
        <mkdir dir="${bin.dir}"/>
        <copy includeemptydirs="false" todir="${bin.dir}">
            <fileset dir="${src.dir}">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>

	<target name="build" depends="clean,init" description="Build GeomLab Java Classes">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="${bin.dir}" includeantruntime="false" 
        		source="${source}" target="${target}">
            <src path="${src.dir}"/>
            <classpath refid="geomlab.classpath"/>
        </javac>
    </target>

	<target name="jar_clean" description="Clean GeomLab Jar">
		<echo message="Clean Jar"/>
		<delete>
			<fileset dir="." includes="*.jar"/>
		</delete>
	</target>

	<target name="jar" depends="boot,jar_clean" description="Build GeomLab Jar">
		<jar destfile="geomlab.jar" basedir="${bin.dir}" manifest="${bin.dir}/META-INF/MANIFEST.MF"/>
	</target>

	<target name="GeomLabJar" description="Run GeomLab Jar">
        <java jar="geomlab.jar" fork="true"/>
    </target>
	
</project>
